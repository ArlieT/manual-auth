enum Role {
  USER
  ADMIN
}

model User {
  id       Int       @id @default(autoincrement())
  username String
  password String
  email    String
  role     Role      @default(USER)
  products Product[]
}

model Product {
  id          Int @id @default(autoincrement())
  user        User   @relation(fields: [id], references: [id])
  description String
  name        String
  price       Int
  image       String
}

